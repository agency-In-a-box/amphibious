  <!-- Load Framework -->
  <script type="module" src="/src/index.js"></script>

  <!-- Page Scripts -->
  <script>
    // Quick view modal
    function openQuickView() {
      const modal = amp.createModal('quickView', '#quickViewModal');
      modal.open();
    }

    // Quantity selector
    function incrementQuantity() {
      const input = document.getElementById('quantity');
      input.value = parseInt(input.value) + 1;
    }

    function decrementQuantity() {
      const input = document.getElementById('quantity');
      if (parseInt(input.value) > 1) {
        input.value = parseInt(input.value) - 1;
      }
    }

    // Initialize
    document.addEventListener('DOMContentLoaded', () => {
      console.log('E-commerce Catalog Page Loaded');

      // Add click handlers to all add to cart buttons
      document.querySelectorAll('.add-to-cart').forEach(btn => {
        btn.addEventListener('click', (e) => {
          e.preventDefault();
          // Show success tooltip
          const tooltip = amp.createTooltip(btn, {
            content: 'Added to cart!',
            variant: 'success',
            trigger: 'manual',
            position: 'top'
          });
          tooltip.show();
          setTimeout(() => tooltip.hide(), 2000);

          // Update cart count
          const badge = document.querySelector('.icon-badge__count');
          if (badge) {
            badge.textContent = parseInt(badge.textContent) + 1;
          }
        });
      });

      // Filter interactions
      document.querySelectorAll('.filter-option input').forEach(checkbox => {
        checkbox.addEventListener('change', () => {
          console.log('Filter changed:', checkbox.nextElementSibling.textContent);
          // In a real app, this would trigger product filtering
        });
      });
    });
  </script>
</body>
