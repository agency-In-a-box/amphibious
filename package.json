{
  "name": "@agency-in-a-box/amphibious",
  "version": "2.0.0",
  "description": "Modern responsive CSS framework and component library - the evolution of A.mphibio.us",
  "type": "module",
  "main": "./dist/amphibious.js",
  "module": "./dist/amphibious.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/amphibious.js",
      "types": "./dist/index.d.ts"
    },
    "./css": "./dist/amphibious.css",
    "./theme": "./dist/theme.css"
  },
  "files": ["dist", "src"],
  "scripts": {
    "dev": "vite --port 2960 --host",
    "build": "vite build",
    "build:ts": "vite build && tsc --emitDeclarationOnly",
    "preview": "vite preview",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "clean": "rm -rf dist",
    "fix:grid": "bun run scripts/fix-grid.ts",
    "fix:images": "bun run scripts/update-image-placeholders.ts",
    "fix:docs": "bun run scripts/fix-docs.ts"
  },
  "keywords": ["css", "framework", "responsive", "grid", "components", "boilerplate", "html5"],
  "author": {
    "name": "Clive Moore",
    "url": "https://clivemoore.ca"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/your-org/AIAB.git",
    "directory": "amphibious"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/jsdom": "^27.0.0",
    "jsdom": "^27.3.0",
    "sass": "^1.80.7",
    "typescript": "^5.6.3",
    "vite": "^6.0.1"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@splidejs/splide": "^4.1.4",
    "lucide": "^0.552.0"
  }
}
