{
  "name": "@agency-in-a-box/amphibious",
  "version": "2.0.0",
  "description": "Modern responsive CSS framework and component library - the evolution of A.mphibio.us",
  "type": "module",
  "main": "./dist/amphibious.js",
  "module": "./dist/amphibious.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/amphibious.js",
      "types": "./dist/index.d.ts"
    },
    "./css": "./dist/amphibious.css",
    "./theme": "./dist/theme.css"
  },
  "files": ["dist", "src"],
  "scripts": {
    "dev": "vite --port 2960 --host",
    "build": "NODE_ENV=production vite build --config vite.config.production.js",
    "build:lib": "NODE_ENV=production vite build",
    "build:site": "NODE_ENV=production vite build --config vite.config.prod.js && node scripts/build-site.js",
    "build:ts": "vite build && tsc --emitDeclarationOnly",
    "build:analyze": "ANALYZE=true NODE_ENV=production vite build --config vite.config.prod.js",
    "build:watch": "NODE_ENV=production vite build --config vite.config.prod.js --watch",
    "preview": "vite preview",
    "preview:prod": "vite preview --config vite.config.prod.js",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:check": "biome check . --linter-enabled=false --organize-imports-enabled=false",
    "typecheck": "tsc --noEmit",
    "test": "bun test --preload ./test/setup.ts",
    "test:watch": "bun test --watch",
    "clean": "rm -rf dist",
    "clean:all": "rm -rf dist node_modules bun.lockb",
    "fix:grid": "bun run scripts/fix-grid.ts",
    "fix:images": "bun run scripts/update-image-placeholders.ts",
    "fix:docs": "bun run scripts/fix-docs.ts"
  },
  "keywords": ["css", "framework", "responsive", "grid", "components", "boilerplate", "html5"],
  "author": {
    "name": "Clive Moore",
    "url": "https://clivemoore.ca"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/your-org/AIAB.git",
    "directory": "amphibious"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@types/node": "^25.0.2",
    "autoprefixer": "^10.4.23",
    "cssnano": "^7.1.2",
    "happy-dom": "^20.0.11",
    "postcss": "^8.5.6",
    "postcss-preset-env": "^10.5.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "sass": "^1.80.7",
    "terser": "^5.44.1",
    "typescript": "^5.6.3",
    "vite": "^6.0.1",
    "vite-plugin-compression": "^0.5.1"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@splidejs/splide": "^4.1.4"
  }
}
